mixin media(componentData)
	div(class='col-lg-6 mb-3 mb-lg-4', data-aos='fade-up', data-aos-delay='1000')
		.media(class='align-items-center bg-white shadow h-100 rounded-lg p-4 p-xl-5')
			div(class='media-icon mr-4 mr-lg-5')
				img(src='assets/images/'+ componentData.img, alt='service icon')
			.media-body
				h4= componentData.title
				p= componentData.text
				a(href=componentData.link, class='btn rounded')=componentData.btnText
mixin logoSlider(logo)
	div(class='item', data-aos='fade-up', data-aos-delay='1000')
		img(src='assets/images/'+ logo.thumb, alt='logo')
			
mixin svg(icon)
	svg(aria-hidden='true' focusable='false' data-prefix='fas' data-icon='star' class='icon' role='img' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 576 512')
		path(fill='currentColor' d=icon.path)
