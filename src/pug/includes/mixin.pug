mixin heading(title, className='heading')
	h2(class=className, data-aos='fade-up', data-aos-delay='500')=title

mixin dualHeading(titleOne='Ladder', titleTwo='Labs', className='heading', url, altText='icon')
	h2(class=className, data-aos='fade-up', data-aos-delay='500')
		if url
			img(src='assets/images/'+ url, alt=altText)
		span=titleOne
		span(class='text-danger')=titleTwo
mixin img(img)
	img(src='assets/images/'+ img.src, class=img.className, data-aos='fade-up', alt=img.alt ? img.alt : 'image', class=img.className)
mixin shape(shape)
	.shape(class=shape.className)
		svg(xmlns='http://www.w3.org/2000/svg', viewBox='0 0 1000 100' preserveAspectRatio='none')
			if shape.path
				path(d=shape.path)
			else
				path(d='M0,6V0h1000v100L0,6z')
