mixin teamMember(teamData)
	div(class='col-8 col-sm-6 col-lg-4 col-xl-3 mt-3 mt-md-4 mx-auto', data-aos='fade-up', data-aos-delay='1000')
		.card.border-0.text-center.bg-transparent
			if teamData.thumb
				img(src='assets/images/'+ teamData.thumb, alt=teamData.thumb, class='w-100 img-fluid rounded-lg')
			else
				img(src='assets/images/member1.png', alt='team member thumbnail' class='w-100 img-fluid rounded-lg')
			.card-body
				if teamData.name
					h5=teamData.name
				else
					h5 Jhon Smith
				if teamData.position
					p=teamData.position
				else
					p Company President

mixin product(data)
	div(class='col-8 col-sm-6 col-lg-4 col-xl-3 mt-3 mt-md-4 mx-auto', data-aos='fade-up', data-aos-delay='1000')
		.card.border-0.text-center.bg-transparent
			if data.thumb
				img(src='assets/images/'+ data.thumb, alt=data.title, class='w-100 img-fluid rounded-lg')
			else
				img(src='assets/images/1.jpg', alt='product' class='w-100 img-fluid rounded-lg')
			.card-body
				if data.title
					div(class='d-flex justify-content-between')
						h5=data.title
						h5(class='text-danger')= '$' + 	data.price
				else
					h5 Custom product
				if data.link
					a(href=data.link) Add to Cart
				else
					a(href='product.html' class='btn btn-block') Add to Cart
